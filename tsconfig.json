{ 
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "allowJs": true, 
        "target": "ES6", 
        "jsx":"react-jsx",
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "outDir": "./build", 
        "moduleResolution": "node",
        "typeRoots": ["./node_modules/@types"]
    }, 
    "include": ["./**/*"],
    "exclude": ["node_modules", "typings"]
}